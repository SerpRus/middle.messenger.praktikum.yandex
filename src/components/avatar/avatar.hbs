{{#Formfield
    id=this.id
    name=this.name
    thema=this.thema
    type=this.type
    classes=this.classes
    label=this.label
    disabled=this.disabled
    onInput=this.onInput
    ref="avatarFormfield"
}}
    {{#if this.avatarSrc}}
        {{{Img
            classes="avatar__img"
            src=this.avatarSrc
            ref="avatarImg"
        }}}

    {{else}}
        {{{Icon
            classes="formfield__label-icon"
            size="40"
            name="preview-2"
        }}}
    {{/if}}
{{/Formfield}}
