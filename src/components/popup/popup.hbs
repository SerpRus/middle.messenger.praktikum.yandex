{{#Modal classes=classes id=id }}
    <div class="modal__content">
        <h2 class="modal__title">
            {{ title }}
        </h2>

        <div class="modal__content-inner">
            {{#if this.fieldId}}
                <div class="modal__field">
                    {{#if this.imgSrc}}
                        {{{Img
                            classes="modal__field-img"
                            src=this.imgSrc
                        }}}
                    {{/if}}

                    {{{Formfield
                        classes="modal__field"
                        id=this.fieldId
                        name=this.fieldName
                        type=this.fieldType
                        label=this.fieldLabel
                        value=this.fieldValue
                        ref=this.fieldRef
                        onInput=this.fieldOnInput
                    }}}
                </div>
            {{/if}}

            {{#if this.text}}
                <div class="modal__text">
                    {{this.text}}
                </div>
            {{/if}}
        </div>

        {{{Action
            classes="modal__action"
            themaType=this.actionThemaType
            thema=this.actionThema
            text=this.actionText
            onClick=this.actionOnClick
        }}}
    </div>
{{/Modal}}
