{
    "extends":  [
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": ["./tsconfig.json", "./tsconfig.node.json"]
    },
    "ignorePatterns": [".eslintrc.json", "vite.config.js"],
    "plugins": ["@typescript-eslint"],
    "rules": {
        "max-len": [2, 100],
        "linebreak-style": 0,
        "indent": ["error", 4,  { "SwitchCase": 1 }],
        "no-new": 0,
        "import/no-absolute-path": 0,
        "no-param-reassign": 0,
        "no-underscore-dangle": 0,
        "class-methods-use-this": 0,
        "arrow-body-style": 0,
        "import/extensions": 0,
        "import/no-extraneous-dependencies": 0,
        "@typescript-eslint/indent": ["error", 4,  { "SwitchCase": 1 }],
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/comma-dangle": 0,
        "@typescript-eslint/no-underscore-dangle": 0,
        "@typescript-eslint/no-param-reassign": 0,
        "@typescript-eslint/class-methods-use-this": 0,
        "@typescript-eslint/arrow-body-style": 0,
        "@typescript-eslint/import/extensions": 0,
        "@typescript-eslint/import/no-extraneous-dependencies": 0,
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/ban-ts-ignore": "off"
    }
}
